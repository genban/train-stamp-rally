script(src='/js/creator/companies.js')
h2 Companies
#companies
  table.table.table-striped.table-sm
    tr
      th ID
      th Name
      th Fares
    tr(v-for='company in companies')
      td(v-text='company.id')
      td(v-text='company.name')
      td
        button.btn.btn-default.btn-xs(
          type='button', v-for='type in company.types', v-text='type.name', @click='openModal(company, type)')

#fareModal.modal.fade(role='dialog')
  .modal-dialog(role='document')
    .modal-content
      .modal-header
        h3(v-text='company.name + trainType.name + "運賃"')
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      .modal-body
        table.table.table-striped.table-sm
          thead
            tr
              th km
              th Cost
          tbody
            tr(v-for='fare in fares')
              td(v-text='fare.km')
              td(v-text='fare.cost')
